<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        android:id='@+id/toolbar2'
        layout='@layout/toolbar'
        android:layout_width="415dp"
        android:layout_height="76dp"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="185dp"
        android:layout_height="168dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="392dp"
        android:src="@drawable/sinbike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ourmission"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="327dp"
        android:text="Our Mission"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mission"
        android:layout_width="347dp"
        android:layout_height="36dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="291dp"
        android:text="Enabling the convenience of Bicycle Riding to promote healthy lifestyles and to sustain the eco-system."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/ourvision"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="455dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="245dp"
        android:text="Our Vision"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vision"
        android:layout_width="347dp"
        android:layout_height="36dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="486dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="209dp"
        android:text="To Become Singapore's 1st choice city-friendly bicycle sharing system based on integrity, convenience and affordability."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactus"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="539dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="161dp"
        android:text="Contact Us"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactusinfo"
        android:layout_width="346dp"
        android:layout_height="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="124dp"
        android:text="contactus@sinbike.com"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactusinfophone"
        android:layout_width="346dp"
        android:layout_height="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="102dp"
        android:text="+65 67865864"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
